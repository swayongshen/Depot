<div class="d-flex justify-content-center h-100" id="user_form">
    <div class="card">
      <div class="card-header">
        <h3>Sign up</h3>
      </div>
      <div class="card-body" id="signup-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field form-group">
            <strong><label>Email</label></strong>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com"%>
          </div>
          <div class="field form-group">
            <strong><label>Name</label></strong>
            <%= f.text_field :name, class: "form-control", placeholder: "David Li" %>
          </div>

          <div id="business-permit">
            <%= f.fields_for :business_permit, BusinessPermit.new do |permit| %>
              <div class="field">
                <strong><%= permit.label 'Business permit number' %></strong>
                <%= permit.text_field :permit_number %>
              </div>
            <% end %>
          </div>

          <div class="field form-group">
            <strong><label>Password</label></strong>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
          </div>
          <div class="field form-group">
            <strong><label>Confirm password</label></strong>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="row form-group justify-content-center">
            <%= f.submit "Sign up", class: "btn float-right submit_btn" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          <%= link_to 'Login', new_user_session_path %>
        </div>
      </div>
    </div>
</div>

