<script>
    $(document).on('turbolinks:load', function() {
        $('#datepicker-from').datetimepicker({
            format: 'dd/mm/yyyy HH:MM',
            uiLibrary: 'bootstrap4',
            modal: true,
            footer: true
        });
        $('#datepicker-to').datetimepicker({
            format: 'dd/mm/yyyy HH:MM',
            uiLibrary: 'bootstrap4',
            modal: true,
            footer: true
        });
    });
</script>

<div class="modal fade" id="filter-form-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Filters</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <%= form_with url: filter_orders_path, method: :get do |form| %>
          <div class="modal-body container">
            <div class="row">
              <div class="field col-md-6">
                <%= form.label 'Buyer email' %>
                <%= form.text_field :email, size: 40, class: "form-control" %>
              </div>
              <div class="field col-md-6">
                <%= form.label 'Buyer name' %>
                <%= form.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="field">
                  <%= form.label 'From:' %>
                  <%= form.text_field :from_date, id: "datepicker-from" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="field">
                  <%= form.label 'To:' %>
                  <%= form.text_field :to_date, id: "datepicker-to" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="field col-md-12">
                <label>Ship status</label>
                <%= form.select :ship_status, Order.ship_statuses.keys, {}, class: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="field col-md-12">
                <%= form.label 'Delivery address' %>
                <%= form.text_field :address, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= form.submit 'Filter', class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>