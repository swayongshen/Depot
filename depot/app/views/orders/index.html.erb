<script type="text/javascript">
    $(document).ready(function() {
        $('#orders-datatable').DataTable({
            scrollY:        true,
            scrollX:        true,
            scrollCollapse: true,
            fixedColumns: {
                leftColumns: 2
            }
        });
    });

</script>
<style>
  th, td { white-space: nowrap; }
</style>

<h1 id="title">Your Orders</h1>
<div class="row">
  <button type="button" id="filter-form-button" class="btn btn-light" data-toggle="modal" data-target="#filter-form-modal">Filter orders</button>
</div>
<div class="row data-table-row">
  <div class="col-md-12">
    <table id="orders-datatable" class="table table-striped table-bordered" style="width:100%">
      <thead>
      <tr>
        <th class="header">Id</th>
        <th class="header">Email</th>
        <th class="header">Name</th>
        <th class="header">Payment Type</th>
        <th class="header">Delivery Address</th>
        <th class="header">Date</th>
        <th class="header">Shipped?</th>
      </tr>
      </thead>
      <tbody id="orders">
      <%= render @orders %>
      </tbody>
    </table>
  </div>

</div>



<%= render 'orders/filter_form'%>
