<h2>Your Cart</h2>
<div>
  <table>
    <%= render(cart.line_items) %>
    <tr class="total_line">
      <td colspan="2">Total</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
  </table>
</div>
<div class="cart-buttons">
</div>
  <%= button_to 'Checkout', new_order_path, method: :get, class:"checkout-btn"%>
  <%= button_to 'Empty cart', cart, method: :delete, class: "empty-cart-btn",
                data: { confirm: 'Are you sure?' } %>
