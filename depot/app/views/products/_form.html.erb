
<%= form_with(model: product, local: false) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong><%= form.label :title %></strong>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="field">
    <strong><%= form.label :description %></strong>
    <%= form.text_area :description, rows: 10, cols: 60, class:"form-control" %>
  </div>

  <div class="field">
    <strong><%= form.label :image_url %></strong>
    <%= form.text_field :image_url, class:"form-control" %>
  </div>

  <div class="field">
    <%= image_tag @product.product_image if @product.product_image.attached? %>
  </div>

  <div class="field">
    <%= form.label :product_image %>
    <%= form.file_field :product_image %>
  </div>


  <div class="row">
    <div class="field col-md-6">
      <strong><%= form.label :product_type %></strong>
      <%= form.text_field :product_type, class:"form-control" %>
    </div>
    <div class="field col-md-6">
      <strong><%= form.label :price %></strong>
      <%= form.text_field :price, class:"form-control" %>
    </div>
  </div>



  <div class="actions">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
